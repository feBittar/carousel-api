{
  "name": "carousel-api-vps",
  "version": "1.0.0",
  "description": "VPS API for generating carousel images using Puppeteer and Google Cloud Storage",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop carousel-api",
    "restart:pm2": "pm2 restart carousel-api",
    "logs:pm2": "pm2 logs carousel-api"
  },
  "keywords": [
    "carousel",
    "image-generation",
    "puppeteer",
    "google-cloud-storage"
  ],
  "author": "Gevia",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/storage": "^7.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "puppeteer": "^21.6.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
